<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/edit.css">
        <style>
        </style>
        <script>
            function toggleClass(formId) {
                const forms = document.getElementsByClassName();
                forms.forEach(form => form.classList.add('hidden'));
                document.getElementById(formId).classList.remove('hidden'); 
            }
        </script>
    </head>
    <body>
        <main>

            <div class="one-block">
                <button onclick="toggleForm('addForm')">Add</button>
                <form id="addForm" class="form hidden" action="addStudent" method="post">
                    <input type="text" name="firstname" placeholder="First name">
                    <input type="text" name="lastname" placeholder="Last name">
                    <input type="text" name="groupname" placeholder="Group name">
                    <button type="submit">OK</button>
                </form>
            </div>

            <div class="one-block">
                <button onclick="toggleForm('editForm')">Edit</button>
                <form id="editForm" class="form hidden" action="edit" method="post">
                    <input type="text" name="firstname" placeholder="First name">
                    <input type="text" name="lastname" placeholder="Last name">
                    <input type="text" name="groupname" placeholder="Group name">
                </form>
            </div>

            <div class="one-block">
                <button onclick="toggleForm('deleteForm')">Delete</button>
                <form id="deleteForm" class="form hidden" action="delete" method="post">
                    <input type="text" name="firstname" placeholder="First name">
                    <input type="text" name="lastname" placeholder="Last name">
                    <input type="text" name="groupname" placeholder="Group name">
                </form>
            </div>

        </main>
    </body>
</html>
